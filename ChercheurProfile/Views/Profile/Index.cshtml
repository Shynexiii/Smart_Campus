@using ChercheurProfile.Models;
@model dynamic
@{
    ViewBag.Title = "Index";
}

    <div class="card mt-4">
        <div class="card-header font-weight-bold">
            Information personelle
        </div>
        <div class="card-body">
            @foreach (Profile profile in Model.profile)
            {
                <p>Nom: @profile.Nom @profile.Prenom</p>
                <p>Email: @profile.Email</p>
                <p>Grade: @profile.Grade</p>
                <p>Role: @profile.Role</p>
                <p>Laboratoire: @profile.Laboratoire</p>
                <p>Equipe: @profile.Team</p>
            }
        </div>
    </div>


    <div class="card mt-4">
        <div class="card-header font-weight-bold">
            Publications
        </div>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Réference</th>
                    <th scope="col">Type</th>
                    <th scope="col">Date de publication</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductionScientifique production in Model.productions)
                {
                    <tr>
                        <th scope="row">@production.Id</th>
                        <td>@production.Title</td>
                        <td>@production.Description</td>
                        <td>@production.Reference</td>
                        <td>@production.Type</td>
                        <td>@production.Created_at</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

        
